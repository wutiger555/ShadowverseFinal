<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_battle"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivFieldPokemon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="155dp"
        android:src="@drawable/charmander" />

    <ImageView
        android:id="@+id/ivMyPokemon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="147dp"
        android:layout_marginStart="51dp"
        android:src="@drawable/squirtle" />

    <TextView
        android:id="@+id/tv_enermyPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="73dp"
        android:text="Enermy Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_myPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivMyPokemon"
        android:layout_alignStart="@+id/ivFieldPokemon"
        android:textSize="20sp"
        android:text="My Pokemon Name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ivMyPokemon"
        android:paddingTop="20dp">

    </ScrollView>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:layout_marginStart="30dp" />
</RelativeLayout>
